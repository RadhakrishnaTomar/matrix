<div class="container">
  <h1>Matrix Multiplication Result</h1>
  <div class="result">
    <h2>Result Matrix:</h2>
    <% if @result %>
      <table>
        <% @result.each do |row| %>
          <tr>
            <% row.each do |value| %>
              <td><%= value %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    <% else %>
      <div class="error">
        <p><%= @error_message %></p>
      </div>
    <% end %>
  </div>
  <div class="buttons">
    <%= link_to "Clear",matrix_calculator_index_path,class: "btn btn-secondary" %>
  </div>
</div>